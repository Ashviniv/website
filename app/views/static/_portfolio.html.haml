%script#portfolio-template{type: "x-tmpl-mustache"}
  .container
    .row
      .col-lg-2
        .blog-side-item
          .category
            %h3 Recent Work
            %ul.list-unstyled
              {{#projects}}
              %li
                %a{href: "#"+"{{name}}"} {{name}}
              {{/projects}}

      .col-lg-10
        {{#projects}}
        .blog-item{id: "{{name}}"}
          .row
            .col-lg-10.col-sm-10
              %h1
                %a{href: "{{url}}",  target: "_blank"} {{name}}
            .col-lg-7
              %a{href: "#{INTRANET_URL}/{{image_url}}" , target: "_blank"}
                .blog-img.well
                  .flip-container{ontouchstart: "this.classList.toggle('hover');"}
                    .flipper
                      .front
                        %img{src: "#{INTRANET_URL}/{{image_url}}"}
                      .back
                        %img{src: "#{INTRANET_URL}/{{image_url}}"}


            .col-lg-5
              .blog-side-item
                %strong.tags
                  %ul.list-unstyled.tagg
                    {{#tags}}
                    %li {{.}}
                    {{/tags}}
                  {{#case_study_url}}
                  %ul.list-unstyled.tagg
                    %li
                      %a{href: "#{INTRANET_URL}/{{case_study_url}}", target: "_blank"} Case Study
                  {{/case_study_url}}
          .row
            .col-md-12
              %br
              %p {{description}}
              %a{href: "#", class:  'pull-right'}
                %i.icon-arrow-up{"data-toggle"=> "tooltip", 'title' => "To top", 'data-placement'=> "top"}
        {{/projects}}


